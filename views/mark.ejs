<!doctype html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">  
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"> <%= title %> Student Mark Statement</h1>    
                <% if (action== 'add') { %>
                    <div class="container">
                        <h1 class="text-center text-success mt-3 mb-3 ">Demo Mark Statement</h1>
                        <div class="card">
                            <div class="card-header text-success fs-3">
                                Student Mark Statement
                            </div>               
                            <div class="card-body">
                                <form method="post" action="/mark/add">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>Reg.No</label>
                                                <input type="text" name="regno" id="regno" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>Name</label>
                                                <input type="text" name="name" id="name" class="form-control"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-header text-danger mb-3">Subject</div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>Python</label> 
                                                <input type="number" name="python" id="mark1" class="form-control" onchange="calc()" />              
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>Java Programming</label> 
                                                <input type="number" name="java" id="mark2" class="form-control" onchange="calc()"/>           
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>Computer Network</label> 
                                                <input type="number" name="computernetwork" id="mark3" class="form-control" onchange="calc()" />              
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>Data Structure</label> 
                                                <input type="number" name="datastructure" id="mark4" class="form-control" onchange="calc()" />              
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>System Software</label> 
                                                <input type="number" name="systemsoftware" id="mark5" class="form-control" onchange="calc()" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>Total</label> 
                                                <input type="number" name="total" id="total" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="mb-3">
                                                <label>Average</label> 
                                                <input type="number" name="average" id="avg" class="form-control" />
                                            </div>
                                        </div>
                                    </div>              
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <button type="submit" id="btnsubmit" class="btn btn-success btn-sm">Submit</button> &nbsp; | &nbsp;
                                            
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div> 
                        <script src="http://localhost:3000/javascripts/calc.js"></script>
                <% } else if(action == 'edit') { %>
                
                <% } else { %> 
                    <div class="card" >
                        <div class="card-header">
                            <div class="row">
                                <div class="col">Student Mark Statement view 
                                    <a href="/sample_data/add " class="btn btn-success btn-sm">Add</a> 
                                </div>                                                              
                            </div>
                        </div>                   
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="table" class="table table-bordered">
                                <tr>
                                    <th>id</th>
                                    <th>Reg.No</th>
                                    <th>Name</th>
                                    <th>Python</th>
                                    <th>Data Structure</th>
                                    <th>Computer Network</th>
                                    <th>Java</th>
                                    <th>System Software</th>
                                    <th>Total</th>
                                    <th>Average</th>
                                    <th>Action</th>
                                </tr>
                        </div>
                    </div>
                </div>
                    <% 
                        if(sampleData.length > 0) 
                        {
                            sampleData.forEach(function(data){
                    %>
                        <tr>
                            <td><%= data.ID %></td>
                            <td><%= data.reg_no %></td>
                            <td><%= data.name %></td>
                            <td><%= data.Python %></td>
                            <td><%= data.javaprogramming %></td>
                            <td><%= data.computernetwork %></td>
                            <td><%= data.datastructure %></td>
                            <td><%= data.systemsoftware %></td>
                            <td><%= data.total %></td>
                            <td><%= data.average %></td>
                            <td>
                                <a href="/sample_data/edit/<%= data.ID %>" class="btn btn-primary btn-sm">Edit</a> &nbsp | &nbsp
                                <a href="/sample_data/delete/<%= data.ID %>" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    <%
                            });
                        }
                    else
                    {
                    %>
                        <tr>
                            <td colspan="5">No Data Found</td>
                        </tr>
                    <%
                    }
                    %>
                    </table>
                </div>
            </div>
        </div>                
        <% } %>
        </div>
    		
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>